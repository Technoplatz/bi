{
    "properties": {
        "act_id": {
            "bsonType": "string",
            "minLength": 1,
            "maxLength": 64,
            "title": "ID",
            "description": "Transaction ID",
            "required": true,
            "width": 140
        },
        "act_item_no": {
            "bsonType": "string",
            "minLength": 0,
            "maxLength": 64,
            "title": "Item No",
            "description": "Item No",
            "width": 110
        },
        "act_status": {
            "bsonType": "string",
            "minLength": 1,
            "maxLength": 32,
            "enum": [
                "0-Open",
                "1-InProcess",
                "2-Closed"
            ],
            "title": "Status",
            "description": "Transaction Status",
            "required": true,
            "default": "0-Open",
            "width": 100
        },
        "act_date": {
            "bsonType": "date",
            "title": "Date",
            "description": "Transaction Date",
            "default": "$CURRENT_DATE",
            "width": 100
        },
        "act_account_id": {
            "bsonType": "string",
            "minLength": 1,
            "maxLength": 64,
            "title": "Account ID",
            "description": "Account ID",
            "pattern": "^[a-zA-Z0-9ÜĞİŞÖÇüğışçöß]{1,64}$",
            "required": true,
            "width": 130
        },
        "act_product_id": {
            "bsonType": "string",
            "minLength": 1,
            "maxLength": 64,
            "title": "Product ID",
            "description": "Product ID",
            "pattern": "^[a-zA-Z0-9-.]{1,64}$",
            "required": true,
            "width": 140
        },
        "act_qty": {
            "bsonType": "number",
            "minimum": 0,
            "maximum": 9999999,
            "title": "Quantity",
            "description": "Transaction Quantity",
            "required": true,
            "width": 90
        },
        "act_price": {
            "bsonType": "number",
            "title": "Price",
            "description": "Unit Price",
            "required": true,
            "width": 130
        },
        "act_amount": {
            "bsonType": "number",
            "title": "Amount",
            "description": "Transaction Amount",
            "required": true,
            "width": 130
        },
        "act_notes": {
            "bsonType": "string",
            "minLength": 0,
            "maxLength": 512,
            "title": "Notes",
            "description": "act_notes column refers to the long text type data.",
            "width": 200
        },
        "act_status0_date": {
            "bsonType": "date",
            "title": "Opening Date",
            "description": "Opening Date",
            "default": "$CURRENT_DATE",
            "width": 140
        },
        "act_status1_date": {
            "bsonType": "date",
            "title": "Inprocess Date",
            "description": "Inprocess Date",
            "width": 140
        },
        "act_status2_date": {
            "bsonType": "date",
            "title": "Closed Date",
            "description": "Closed Date",
            "width": 140
        },
        "_tags": {
            "bsonType": "array",
            "uniqueItems": true,
            "minItems": 0,
            "maxItems": 100,
            "items": {
                "bsonType": "string",
                "pattern": "^[#@][a-zA-Z0-9ÜĞİŞÖÇüğışçöß]{0,32}$"
            },
            "title": "Tags",
            "description": "Tags",
            "subType": "tag",
            "manualAdd": true,
            "chips": true,
            "width": 300
        }
    },
    "required": [
        "act_id",
        "act_date",
        "act_account_id",
        "act_product_id",
        "act_status"
    ],
    "unique": [
        [
            "act_id",
            "act_item_no"
        ]
    ],
    "index": [
        [
            "act_account_id"
        ],
        [
            "act_product_id"
        ],
        [
            "act_status"
        ],
        [
            "_tags"
        ]
    ],
    "parents": [
        {
            "key": "act_account_id",
            "collection": "accounts",
            "lookup": [
                {
                    "local": "act_account_id",
                    "remote": "acc_id"
                }
            ]
        }
    ],
    "sort": {
        "act_id": 1
    },
    "actions": [
        {
            "id": "action-status-1",
            "title": "Status 1-InProcess",
            "description": "This action sets records with status 0-Open to 1-InProcess.",
            "enabled": true,
            "filter": [
                {
                    "key": "act_status",
                    "op": "eq",
                    "value": "0-Open"
                }
            ],
            "fields": [
                {
                    "key": "act_status",
                    "value": "1-InProcess"
                },
                {
                    "key": "act_status1_date",
                    "value": "$CURRENT_DATE"
                },
                {
                    "key": "act_notes",
                    "value": null
                }
            ]
        },
        {
            "id": "action-status-2",
            "title": "Status 2-Closed",
            "description": "This action sets records with status 1-InProcess to 2-Closed.",
            "enabled": true,
            "filter": [
                {
                    "key": "act_status",
                    "op": "eq",
                    "value": "1-InProcess"
                }
            ],
            "fields": [
                {
                    "key": "act_status",
                    "value": "2-Closed"
                },
                {
                    "key": "act_status2_date",
                    "value": "$CURRENT_DATE"
                },
                {
                    "key": "act_notes",
                    "value": null
                }
            ]
        },
        {
            "id": "set-account-id",
            "title": "Set Account ID",
            "description": "This action assigns an account id to selected rows.",
            "enabled": true,
            "filter": [],
            "fields": [
                {
                    "key": "act_account_id",
                    "value": null
                },
                {
                    "key": "act_notes",
                    "value": null
                }
            ]
        }
    ]
}