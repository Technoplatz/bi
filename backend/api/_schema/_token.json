{
  "properties": {
    "tkn_description": {
      "bsonType": "string",
      "title": "Description",
      "description": "Token Description",
      "placeholder": "Short description for Token",
      "minLength": 3,
      "maxLength": 128,
      "pattern": "^[a-zA-Z0-9-_ ]{3,128}$",
      "width": 160
    },
    "tkn_collection_id": {
      "bsonType": "string",
      "minLength": 3,
      "maxLength": 64,
      "pattern": "^[a-z0-9-_]{3,64}$",
      "title": "Collection",
      "description": "Collection ID",
      "collection": true,
      "permanent": true,
      "width": 140
    },
    "tkn_lifetime": {
      "bsonType": "number",
      "title": "Lifetime",
      "description": "Token validity period in minutes",
      "placeholder": "Token life time in seconds",
      "minimum": 1,
      "maximum": 525600,
      "permanent": true,
      "width": 130
    },
    "tkn_is_active": {
      "bsonType": "bool",
      "title": "Is Active",
      "description": "Token Accesibility",
      "default": true,
      "width": 130
    },
    "tkn_grant_read": {
      "bsonType": "bool",
      "title": "Grant Read",
      "description": "Grant Read",
      "default": false,
      "width": 130
    },
    "tkn_grant_insert": {
      "bsonType": "bool",
      "title": "Grant Insert",
      "description": "Grant Insert",
      "default": false,
      "width": 130
    },
    "tkn_grant_update": {
      "bsonType": "bool",
      "title": "Grant Update",
      "description": "Grant Update",
      "default": false,
      "width": 140
    },
    "tkn_grant_upsert": {
      "bsonType": "bool",
      "title": "Grant Upsert",
      "description": "Grant Upsert",
      "default": false,
      "width": 140
    },
    "tkn_grant_delete": {
      "bsonType": "bool",
      "title": "Grant Delete",
      "description": "Grant Delete",
      "default": false,
      "width": 140
    }
  },
  "required": ["tkn_description"],
  "index": [["tkn_collection_id"], ["tkn_finder", "tkn_is_active"]],
  "unique": [["tkn_description"], ["tkn_finder"], ["tkn_secret"]],
  "sort": {
    "_modified_at": -1
  }
}
