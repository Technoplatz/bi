{
  "properties": {
    "tkn_name": {
      "bsonType": "string",
      "title": "Name",
      "description": "Token Name",
      "placeholder": "Short description for token",
      "minLength": 3,
      "maxLength": 128,
      "pattern": "^[a-zA-Z0-9-_ ]{3,128}$"
    },
    "tkn_collection_id": {
      "bsonType": "string",
      "minLength": 3,
      "maxLength": 64,
      "pattern": "^[a-z0-9-_]{3,64}$",
      "title": "Collection",
      "description": "Collection ID",
      "collection": true,
      "permanent": true
    },
    "tkn_lifetime": {
      "bsonType": "number",
      "title": "Lifetime",
      "description": "Token validity period in minutes",
      "placeholder": "Token lifetime 3-518400 mins",
      "minimum": 3,
      "maximum": 518400,
      "permanent": true
    },
    "tkn_is_active": {
      "bsonType": "bool",
      "title": "Is Active",
      "description": "Token Accesibility",
      "default": true
    },
    "tkn_grant_read": {
      "bsonType": "bool",
      "title": "Grant Read",
      "description": "Grant Read",
      "default": false
    },
    "tkn_grant_insert": {
      "bsonType": "bool",
      "title": "Grant Insert",
      "description": "Grant Insert",
      "default": false
    },
    "tkn_grant_update": {
      "bsonType": "bool",
      "title": "Grant Update",
      "description": "Grant Update",
      "default": false
    },
    "tkn_grant_upsert": {
      "bsonType": "bool",
      "title": "Grant Upsert",
      "description": "Grant Upsert",
      "default": false
    },
    "tkn_grant_delete": {
      "bsonType": "bool",
      "title": "Grant Delete",
      "description": "Grant Delete",
      "default": false
    },
    "tkn_allowed_ips": {
      "bsonType": "array",
      "title": "IP Addresses",
      "description": "Allowed IP addresses",
      "placeholder": "Enter an IPv4 Address or 0.0.0.0",
      "uniqueItems": true,
      "minItems": 0,
      "maxItems": 8,
      "items": {
        "bsonType": "string",
        "minLength": 7,
        "maxLength": 15,
        "pattern": "^[0-9.]{7,15}$"
      },
      "subType": "ip",
      "manualAdd": true
    },
    "tkn_allowed_queries": {
      "bsonType": "array",
      "title": "Queries",
      "description": "Allowed queries",
      "placeholder": "Enter a query id",
      "uniqueItems": true,
      "minItems": 0,
      "maxItems": 8,
      "items": {
        "bsonType": "string",
        "minLength": 3,
        "maxLength": 64,
        "pattern": "^[a-z0-9-_]{3,64}$"
      },
      "manualAdd": true
    }
  },
  "required": ["tkn_name", "tkn_collection_id", "tkn_lifetime"],
  "index": [["tkn_collection_id"]],
  "unique": [["tkn_name"]],
  "sort": {
    "_modified_at": -1
  }
}
