{
  "properties": {
    "fwa_name": {
      "bsonType": "string",
      "title": "Rule Name",
      "description": "Rule Name",
      "minLength": 3,
      "maxLength": 64,
      "pattern": "^[a-zA-Z0-9- ]{3,64}$"
    },
    "fwa_source_ip": {
      "bsonType": "string",
      "title": "Source IP",
      "description": "Source IP",
      "minLength": 7,
      "maxLength": 17,
      "pattern": "^[0-9.-]{7,17}$",
      "required": true,
      "masked": true
    },
    "fwa_enabled": {
      "bsonType": "bool",
      "title": "Enabled",
      "description": "Enabled or not",
      "default": true
    },
    "fwa_waf_sync_date": {
      "bsonType": "date",
      "title": "WAF Sync Date",
      "description": "WAF sync date",
      "readonly": true
    },
    "_tags": {
      "bsonType": "array",
      "title": "Tags",
      "description": "Enter a tag #...",
      "uniqueItems": true,
      "minItems": 0,
      "maxItems": 32,
      "items": {
        "bsonType": "string",
        "minLength": 2,
        "maxLength": 64,
        "pattern": "^[#@][a-zA-Z0-9]{2,64}$"
      },
      "subType": "tag",
      "manualAdd": true
    }
  },
  "required": ["fwa_name", "fwa_source_ip", "_tags"],
  "index": [
    ["fwa_source_ip", "fwa_enabled", "_tags"],
    ["fwa_name", "fwa_source_ip", "fwa_enabled"],
    ["fwa_enabled"],
    ["fwa_source_ip", "fwa_enabled"],
    ["fwa_source_ip", "_tags"]
  ],
  "unique": [["fwa_name"], ["fwa_source_ip"]],
  "sort": {
    "_modified_at": -1
  },
  "actions": [
    {
      "id": "cloudflare",
      "title": "Cloudflare WAF Sync",
      "enabled": true,
      "match": [
        {
          "key": "wfa_enabled",
          "op": "ne",
          "value": false
        }
      ],
      "set": [],
      "noninteractive": true,
      "one_click": true,
      "icon": "swap-vertical-sharp",
      "uniqueness": false,
      "unique": [],
      "_tags": ["#Managers", "#Administrators", "#Technoplatz"],
      "notification": {
        "notify": true,
        "subject": "Security [Firewall Updated]",
        "body": "Hi,<br /><br />We would like to let you know that WAF has been updated.",
        "attachment": true,
        "fields": "fwa_name,fwa_source_ip",
        "filter": [
          {
            "key": "fwa_enabled",
            "op": "eq",
            "value": true
          }
        ]
      },
      "api": {
        "id": "waf",
        "enabled": true,
        "protocol": "http",
        "subdomain": "",
        "domain": "172.18.0.9",
        "path": "/waf",
        "headers": {
          "Content-Type": "application/json"
        },
        "method": "post",
        "map": {}
      }
    }
  ]
}
