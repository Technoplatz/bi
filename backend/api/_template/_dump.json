{
  "properties": {
    "dmp_id": {
      "bsonType": "string",
      "title": "ID",
      "description": "Dump ID",
      "minLength": 3,
      "maxLength": 64,
      "pattern": "^[a-z0-9-]{3,64}$",
      "permanent": true,
      "default": "database-dump"
    },
    "dmp_description": {
      "bsonType": "string",
      "title": "Description",
      "description": "Description",
      "minLength": 0,
      "maxLength": 128,
      "pattern": "^[\\w|\\w$|\\W\\w|\\w\\W]{0,128}$"
    },
    "dmp_process": {
      "bsonType": "string",
      "title": "Process",
      "description": "Process Type",
      "enum": ["dump", "restore"],
      "default": "dump",
      "permanent": true
    },
    "dmp_type": {
      "bsonType": "string",
      "title": "File Type",
      "description": "File Type",
      "enum": ["gzip"],
      "default": "gzip"
    },
    "dmp_size": {
      "bsonType": "number",
      "title": "Size",
      "description": "File Size",
      "permanent": true
    }
  },
  "required": ["dmp_id", "dmp_type"],
  "unique": [["dmp_id"], ["dmp_file"]],
  "sort": {
    "_created_at": -1
  }
}
