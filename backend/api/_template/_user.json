{
  "properties": {
    "usr_id": {
      "bsonType": "string",
      "pattern": "^.+@.+$",
      "title": "User ID",
      "description": "Email",
      "minLength": 0,
      "maxLength": 64,
      "required": true,
      "placeholder": "Enter a business e-mail",
      "caseType": "lowercase"
    },
    "usr_name": {
      "bsonType": "string",
      "minLength": 3,
      "maxLength": 64,
      "title": "Name",
      "description": "Full Name",
      "required": true
    },
    "usr_scope": {
      "bsonType": "string",
      "minLength": 7,
      "maxLength": 13,
      "title": "Scope",
      "description": "User Scope",
      "enum": ["Internal", "External", "Administrator"],
      "required": true,
      "default": "Internal"
    },
    "usr_enabled": {
      "bsonType": "bool",
      "title": "Enabled",
      "description": "Enabled or not"
    },
    "_tags": {
      "bsonType": "array",
      "uniqueItems": true,
      "minItems": 0,
      "maxItems": 256,
      "items": {
        "bsonType": "string",
        "minLength": 2,
        "maxLength": 64,
        "pattern": "^[#@][a-zA-Z0-9]{2,64}$"
      },
      "title": "Tags",
      "description": "Enter a tag #...",
      "subType": "tag",
      "manualAdd": true
    }
  },
  "required": ["usr_id", "usr_name", "usr_scope"],
  "unique": [["usr_id"]],
  "index": [["usr_id", "usr_enabled"], ["_tags"]],
  "sort": {
    "_modified_at": -1
  },
  "actions": [
    {
      "id": "act-assign-tag",
      "title": "ASSIGN TAGS",
      "description": "Assign TAG to users which are selected.",
      "enabled": true,
      "filter": [],
      "fields": [
        {
          "key": "_tags",
          "value": null
        }
      ]
    }
  ]
}
