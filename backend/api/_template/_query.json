{
  "properties": {
    "que_id": {
      "bsonType": "string",
      "title": "ID",
      "description": "Query ID",
      "minLength": 3,
      "maxLength": 64,
      "pattern": "^[a-z0-9-_]{3,64}$",
      "caseType": "lowercase",
      "permanent": true
    },
    "que_title": {
      "bsonType": "string",
      "title": "Title",
      "description": "Query Title",
      "minLength": 1,
      "maxLength": 64,
      "caseType": "capitalize"
    },
    "que_collection_id": {
      "bsonType": "string",
      "title": "Collection ID",
      "description": "Collection ID",
      "minLength": 3,
      "maxLength": 64,
      "pattern": "^[a-z0-9-_]{3,64}$",
      "collection": true,
      "caseType": "lowercase"
    },
    "_tags": {
      "bsonType": "array",
      "title": "Tags",
      "description": "Enter a tag #...",
      "uniqueItems": false,
      "minItems": 0,
      "maxItems": 128,
      "items": {
        "bsonType": "string",
        "minLength": 2,
        "maxLength": 64,
        "pattern": "^[#@][a-zA-Z0-9]{2,64}$"
      },
      "manualAdd": true
    },
    "que_in_dashboard": {
      "bsonType": "bool",
      "title": "In Dashboard?",
      "description": "Show in dashboard",
      "default": false
    },
    "que_in_collection": {
      "bsonType": "bool",
      "title": "In Collection?",
      "description": "Show in collection",
      "default": false
    },
    "que_flashcard_size": {
      "bsonType": "string",
      "title": "Flashcard Size",
      "description": "Flashcard size",
      "enum": ["S", "M", "L", "XL"],
      "default": "M"
    },
    "que_scheduled": {
      "bsonType": "bool",
      "title": "Scheduled?",
      "description": "Scheduled or not",
      "default": false
    },
    "que_scheduled_cron": {
      "bsonType": "string",
      "title": "Crontab",
      "description": "Schedule cron",
      "minLength": 0,
      "maxLength": 64,
      "pattern": "^[a-z0-9*\\-,/ ]{0,64}$",
      "caseType": "lowercase"
    },
    "que_message_body": {
      "bsonType": "string",
      "title": "Email Body",
      "description": "Query email body",
      "minLength": 0,
      "maxLength": 512,
      "textarea": true
    },
    "que_priority": {
      "bsonType": "number",
      "title": "Priority",
      "description": "Sort Number",
      "placeholder": "Priority",
      "minimum": 1,
      "maximum": 1000000,
      "default": 1000
    },
    "que_aggregate": {
      "bsonType": "object",
      "title": "Aggregation",
      "description": "Query aggregation"
    }
  },
  "required": ["que_id", "que_title", "que_collection_id"],
  "index": [
    ["que_collection_id"],
    ["que_scheduled"],
    ["que_scheduled", "_approved"],
    ["que_id", "_approved", "_tags"],
    ["que_in_dashboard", "_approved", "_tags"]
  ],
  "unique": [["que_id"]],
  "actions": [
    {
      "id": "priority",
      "title": "Set Priority",
      "enabled": true,
      "match": [],
      "set": [{ "key": "que_priority", "value": 9000 }],
      "one_click": false,
      "icon": "swap-vertical-sharp",
      "uniqueness": false,
      "unique": [],
      "_tags": [],
      "notification": {},
      "api": {}
    }
  ],
  "sort": {
    "que_priority": 1,
    "_modified_at": -1
  }
}
