{
  "properties": {
    "que_id": {
      "bsonType": "string",
      "minLength": 3,
      "maxLength": 64,
      "pattern": "^[a-z0-9-_]{3,64}$",
      "title": "ID",
      "description": "Query ID",
      "casetype": "lowercase"
    },
    "que_title": {
      "bsonType": "string",
      "minLength": 1,
      "maxLength": 32,
      "title": "Title",
      "description": "Query Title",
      "casetype": "capitalize"
    },
    "que_collection_id": {
      "bsonType": "string",
      "minLength": 3,
      "maxLength": 64,
      "pattern": "^[a-z0-9-_]{3,64}$",
      "title": "Collection ID",
      "description": "Collection ID",
      "required": true,
      "collection": true,
      "casetype": "lowercase"
    },
    "que_scheduled": {
      "bsonType": "bool",
      "title": "Scheduled",
      "default": false,
      "description": "Scheduled or not"
    },
    "que_scheduled_cron": {
      "bsonType": "string",
      "title": "Cron",
      "description": "Schedule cron",
      "minLength": 0,
      "maxLength": 64,
      "pattern": "^[a-z0-9*\\-,/ ]{0,64}$"
    },
    "que_aggregate": {
      "bsonType": "object",
      "title": "Aggregation",
      "description": "Query aggregation"
    },
    "que_message_body": {
      "bsonType": "string",
      "minLength": 0,
      "maxLength": 512,
      "title": "Body",
      "description": "Query email body",
      "textarea": true
    },
    "_tags": {
      "bsonType": "array",
      "uniqueItems": false,
      "minItems": 0,
      "maxItems": 256,
      "items": {
        "bsonType": "string",
        "minLength": 2,
        "maxLength": 64,
        "pattern": "^[#@][a-zA-Z0-9]{2,64}$"
      },
      "title": "Tags",
      "description": "Enter a tag #...",
      "manualAdd": true
    }
  },
  "required": ["que_id", "que_title", "que_collection_id"],
  "index": [["que_collection_id"]],
  "unique": [["que_id"]],
  "sort": {
    "_modified_at": -1
  }
