{
  "properties": {
    "que_id": {
      "bsonType": "string",
      "title": "ID",
      "description": "Query ID",
      "minLength": 3,
      "maxLength": 64,
      "pattern": "^[a-z0-9-_]{3,64}$",
      "caseType": "lowercase"
    },
    "que_title": {
      "bsonType": "string",
      "title": "Title",
      "description": "Query Title",
      "minLength": 1,
      "maxLength": 32,
      "caseType": "capitalize"
    },
    "que_type": {
      "bsonType": "string",
      "title": "Type",
      "description": "Query type",
      "enum": ["query", "cronjob"],
      "default": "query"
    },
    "que_collection_id": {
      "bsonType": "string",
      "title": "Collection ID",
      "description": "Collection ID",
      "minLength": 3,
      "maxLength": 64,
      "pattern": "^[a-z0-9-_]{3,64}$",
      "collection": true,
      "caseType": "lowercase"
    },
    "que_scheduled": {
      "bsonType": "bool",
      "title": "Scheduled",
      "description": "Scheduled or not",
      "default": false
    },
    "que_scheduled_cron": {
      "bsonType": "string",
      "title": "Crontab",
      "description": "Schedule cron",
      "minLength": 0,
      "maxLength": 64,
      "pattern": "^[a-z0-9*\\-,/ ]{0,64}$",
      "caseType": "lowercase"
    },
    "que_aggregate": {
      "bsonType": "object",
      "title": "Aggregation",
      "description": "Query aggregation"
    },
    "que_message_body": {
      "bsonType": "string",
      "title": "Email Body",
      "description": "Query email body",
      "minLength": 0,
      "maxLength": 512,
      "textarea": true
    },
    "_tags": {
      "bsonType": "array",
      "title": "Tags",
      "description": "Enter a tag #...",
      "uniqueItems": false,
      "minItems": 0,
      "maxItems": 256,
      "items": {
        "bsonType": "string",
        "minLength": 2,
        "maxLength": 64,
        "pattern": "^[#@][a-zA-Z0-9]{2,64}$"
      },
      "manualAdd": true
    }
  },
  "required": ["que_id", "que_title", "que_collection_id", "que_type"],
  "index": [["que_collection_id"]],
  "unique": [["que_id"]],
  "sort": {
    "_modified_at": -1
  }
}
