{
  "properties": {
    "vis_id": {
      "bsonType": "string",
      "minLength": 3,
      "maxLength": 64,
      "pattern": "^[a-z0-9-_]{3,64}$",
      "title": "ID",
      "description": "Visual ID",
      "caseType": "lowercase"
    },
    "vis_title": {
      "bsonType": "string",
      "minLength": 1,
      "maxLength": 32,
      "title": "Title",
      "description": "Visual Title",
      "caseType": "capitalize"
    },
    "vis_query_id": {
      "bsonType": "string",
      "minLength": 3,
      "maxLength": 64,
      "pattern": "^[a-z0-9-_]{3,64}$",
      "title": "Query ID",
      "description": "Query ID",
      "required": true,
      "query": true,
      "caseType": "lowercase"
    },
    "vis_scheduled": {
      "bsonType": "bool",
      "title": "Scheduled",
      "default": false,
      "description": "Scheduled or not"
    },
    "vis_scheduled_cron": {
      "bsonType": "string",
      "title": "Crontab",
      "description": "Schedule cron",
      "minLength": 0,
      "maxLength": 64,
      "pattern": "^[a-z0-9*\\-,/ ]{0,64}$",
      "caseType": "lowercase"
    },
    "vis_pivot": {
      "bsonType": "array",
      "minItems": 0,
      "maxItems": 4,
      "uniqueItems": true,
      "additionalProperties": false,
      "filter": true,
      "items": {
        "bsonType": "object",
        "additionalProperties": false,
        "properties": {
          "key": {
            "bsonType": "string",
            "minLength": 1,
            "maxLength": 64,
            "pattern": "^[a-z_]{1,64}$",
            "title": "key",
            "description": "Key"
          },
          "op": {
            "bsonType": "string",
            "minLength": 5,
            "maxLength": 16,
            "pattern": "^[a-z\\[\\]-]{5,16}$",
            "enum": ["x-axis", "y-axis", "group", "data[sum]", "data[count]"],
            "title": "op",
            "description": "Type"
          }
        },
        "required": ["key", "op"]
      },
      "title": "Pivot",
      "description": "Visual pivot",
      "subType": "keyop"
    },
    "_tags": {
      "bsonType": "array",
      "uniqueItems": false,
      "minItems": 0,
      "maxItems": 256,
      "items": {
        "bsonType": "string",
        "minLength": 2,
        "maxLength": 64,
        "pattern": "^[#@][a-zA-Z0-9]{2,64}$"
      },
      "title": "Tags",
      "description": "Enter a tag #...",
      "manualAdd": true
    }
  },
  "required": ["vis_id", "vis_title", "vis_query_id"],
  "index": [["vis_query_id"]],
  "unique": [["vis_id"]],
  "sort": {
    "_modified_at": -1
  }
}
