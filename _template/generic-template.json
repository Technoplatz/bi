      "title": "Record No",
      "description": "Record No",
      "minLength": 1,
      "maxLength": 64,
      "width": 120
    },
    "gen_type": {
      "bsonType": "string",
      "title": "Type",
      "description": "Account Type",
      "enum": ["0-Company", "1-Individual", "2-Government", "3-Internal", "4-External"],
      "default": "0-Company",
      "width": 110
    },
    "gen_status": {
      "bsonType": "string",
      "title": "Status",
      "description": "Status",
      "enum": ["0-Open", "1-InProgress", "3-Closed", "4-Finalized", "5-Archived"],
      "default": "0-Open",
      "width": 110
    },
    "gen_entry_date": {
      "bsonType": "date",
      "title": "Entry Date",
      "description": "Entry Date",
      "width": 130
    },
    "gen_qty": {
      "bsonType": "number",
      "title": "Quantity",
      "description": "Quantity",
      "default": 1,
      "width": 120
    },
    "gen_unit_price": {
      "bsonType": "number",
      "title": "Unit Price",
      "description": "Unit Price",
      "default": 1,
      "width": 140
    },
    "gen_amount": {
      "bsonType": "number",
      "title": "Amount",
      "description": "Amount",
      "default": 1,
      "width": 140
    },
    "gen_is_enabled": {
      "bsonType": "bool",
      "title": "Is Enabled?",
      "description": "Is Enabled?",
      "width": 130
    }
