  "required": ["gen_no", "gen_type", "gen_status"],
  "index": [["gen_type"], ["gen_status"], ["gen_type", "gen_status"]],
  "unique": [["gen_no"]],
  "parents": [],
  "actions": [
    {
      "id": "open-to-in-progress",
      "title": "0-Open to 1-InProgress",
      "enabled": true,
      "filter": [
        {
          "key": "gen_status",
          "op": "eq",
          "value": "0-Open"
        }
      ],
      "set": [
        {
          "key": "gen_status",
          "value": "1-InProgress"
        }
      ],
      "one_click": true
    }
  ],
  "sort": {
    "_modified_at": -1
  }
}
