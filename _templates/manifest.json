{
  "properties": {
    "man_no": {
      "bsonType": "string",
      "title": "Manifest No",
      "description": "Customs Manifest Number",
      "minLength": 18,
      "maxLength": 20,
      "width": 160
    },
    "man_odi_no": {
      "bsonType": "string",
      "title": "Ordino No",
      "description": "Main Ordino Number",
      "pattern": "^[0-9A-Z-]{1,20}$",
      "minLength": 1,
      "maxLength": 20,
      "width": 170
    },
    "man_odi_sub_no": {
      "bsonType": "string",
      "title": "Ordino Sub No",
      "description": "Sub Ordino Number",
      "pattern": "^[0-9A-Z-]{6,20}$",
      "minLength": 6,
      "maxLength": 20
    },
    "man_file_no": {
      "bsonType": "string",
      "title": "File No",
      "description": "Internal File Number",
      "minLength": 1,
      "maxLength": 7,
      "width": 110
    },
    "man_case_no": {
      "bsonType": "number",
      "title": "Case Number",
      "description": "Number of cases",
      "width": 120
    },
    "man_amount": {
      "bsonType": "number",
      "title": "Manifest Amount",
      "description": "Tax and expenses",
      "default": 0
    },
    "man_opening_date": {
      "bsonType": "date",
      "title": "Opening Date",
      "description": "Manifest opening date",
      "width": 150
    },
    "man_closed": {
      "bsonType": "bool",
      "title": "Completed",
      "description": "MAnifest Closed",
      "truetext": "Completed",
      "falsetext": "OnCustomsProcess",
      "default": false,
      "width": 140
    },
    "man_closing_date": {
      "bsonType": "date",
      "title": "Closing Date",
      "description": "Manifest closing date",
      "width": 150
    }
  },
  "required": ["man_no", "man_opening_date", "man_file_no", "man_case_no"],
  "index": [["man_no"], ["man_odi_no", "man_odi_sub_no"], ["man_odi_no"], ["man_file_no"]],
  "unique": [["man_no"], ["man_file_no"]],
  "sort": {
    "_modified_at": -1
  },
  "parents": [
    {
      "collection": "ordino",
      "match": [
        {
          "key": "man_odi_no",
          "value": "odi_no"
        },
        {
          "key": "man_odi_sub_no",
          "value": "odi_sub_no"
        }
      ],
      "get": ["odi_no", "odi_sub_no"],
      "filter": [
        {
          "key": "odi_completed",
          "op": "eq",
          "value": false
        }
      ]
    }
  ],
  "links": [
    {
      "collection": "delivery",
      "get": "dnn_no",
      "match": [
        {
          "key": "dnn_status",
          "op": "in",
          "value": "20-OnCustoms,30-OnCustomsProcess"
        },
        {
          "key": "dnn_odi_no",
          "op": "eq",
          "value": "man_odi_no"
        },
        {
          "key": "dnn_odi_sub_no",
          "op": "eq",
          "value": "man_odi_sub_no"
        }
      ],
      "set": [
        {
          "key": "dnn_man_no",
          "value": "man_no"
        },
        {
          "key": "dnn_status",
          "value": "30-OnCustomsProcess"
        }
      ],
      "_tags": ["#Managers", "#Technoplatz", "#Operation"],
      "notification": {
        "notify": true,
        "subject": "Manifest Created",
        "body": "Hi,<br /><br />We would like to let you know that the attached DNs has been linked to a manifest.",
        "fields": "dnn_no,dnn_line_no,dnn_man_no,dnn_odi_no,dnn_odi_sub_no,dnn_acc_no,dnn_acc_name"
      }
    }
  ],
  "actions": [],
  "triggers": [
    {
      "name": "Opening",
      "enabled": true,
      "operations": ["update", "insert"],
      "changes": [
        {
          "key": "man_opening_date",
          "op": "nnull",
          "value": null
        }
      ],
      "targets": [
        {
          "collection": "delivery",
          "match": [
            {
              "key": "dnn_man_no",
              "value": "man_no"
            }
          ],
          "filter": [
            {
              "key": "dnn_status",
              "op": "in",
              "value": "20-OnCustoms,30-OnCustomsProcess"
            }
          ],
          "set": [
            {
              "key": "dnn_status",
              "value": "30-OnCustomsProcess"
            }
          ],
          "upsert": false
        }
      ]
    },
    {
      "name": "Completed",
      "enabled": true,
      "operations": ["update"],
      "changes": [
        {
          "key": "man_closed",
          "op": "eq",
          "value": true
        },
        {
          "key": "man_closing_date",
          "op": "nnull",
          "value": null
        }
      ],
      "targets": [
        {
          "collection": "delivery",
          "match": [
            {
              "key": "dnn_man_no",
              "value": "man_no"
            }
          ],
          "filter": [
            {
              "key": "dnn_status",
              "op": "in",
              "value": "30-OnCustomsProcess,40-ClearanceCompleted"
            }
          ],
          "set": [
            {
              "key": "dnn_status",
              "value": "40-ClearanceCompleted"
            }
          ],
          "upsert": false
        }
      ]
    },
    {
      "name": "Completed rollback",
      "enabled": true,
      "operations": ["update"],
      "changes": [
        {
          "key": "man_closed",
          "op": "eq",
          "value": false
        },
        {
          "key": "man_closing_date",
          "op": "nnull",
          "value": null
        }
      ],
      "targets": [
        {
          "collection": "delivery",
          "match": [
            {
              "key": "dnn_man_no",
              "value": "man_no"
            }
          ],
          "filter": [
            {
              "key": "dnn_status",
              "op": "in",
              "value": "30-OnCustomsProcess,40-ClearanceCompleted"
            }
          ],
          "set": [
            {
              "key": "dnn_status",
              "value": "30-OnCustomsProcess"
            }
          ],
          "upsert": false
        }
      ]
    }
  ],
  "views": {},
  "fetchers": []
}
