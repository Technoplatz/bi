{
  "properties": {
    "shp_id": {
      "bsonType": "number",
      "title": "ID",
      "description": "Shipment ID",
      "placeholder": "Shipment ID",
      "minimum": 0,
      "maximum": 999999,
      "counter": true,
      "permanent": true,
      "width": 80
    },
    "shp_status": {
      "bsonType": "string",
      "title": "Status",
      "description": "Status",
      "minLength": 5,
      "maxLength": 16,
      "pattern": "^[A-Za-z0-9-]{5,16}$",
      "enum": ["10-Ready", "20-Completed", "99-Error"],
      "default": "10-Ready",
      "readonly": false,
      "width": 120
    },
    "shp_date": {
      "bsonType": "date",
      "title": "Ship Date",
      "description": "Shipment Date",
      "dateonly": false,
      "width": 120
    },
    "shp_acc_no": {
      "bsonType": "string",
      "title": "Account No",
      "description": "Account No",
      "minLength": 10,
      "maxLength": 11,
      "pattern": "^[A-Z0-9-]{10,11}$",
      "width": 130
    },
    "shp_carrier_name": {
      "bsonType": "string",
      "title": "Carrier Name",
      "description": "Carrier name or driver name surname",
      "placeholder": "Carrier or driver Name",
      "minLength": 2,
      "maxLength": 32,
      "width": 180
    },
    "shp_carrier_id": {
      "bsonType": "string",
      "title": "Carrier Tax/ID No",
      "description": "Carrier tax no or driver id",
      "placeholder": "Carrier Tax/Id No",
      "minLength": 10,
      "maxLength": 12,
      "pattern": "^[0-9]{10,12}$",
      "width": 140
    },
    "shp_vehicle_id": {
      "bsonType": "string",
      "title": "Vehicle Plate",
      "description": "Vehicle plate number",
      "placeholder": "Vehicle plate number",
      "minLength": 6,
      "maxLength": 16,
      "pattern": "^[A-Za-z0-9 ]{6,16}$",
      "casetype": "uppercase",
      "width": 140
    },
    "shp_notes": {
      "bsonType": "string",
      "title": "Shipment Notes",
      "description": "Shipment notes to carrier or customer",
      "placeholder": "Shipment Notes",
      "minLength": 0,
      "maxLength": 512,
      "width": 200
    },
    "shp_waybill_no": {
      "bsonType": "string",
      "title": "Waybill No",
      "description": "Waybill serial number",
      "placeholder": "Waybill No",
      "pattern": "^[A-Z0-9-]{16,18}$",
      "minLength": 0,
      "maxLength": 18,
      "readonly": false,
      "width": 150
    },
    "shp_waybill_date": {
      "bsonType": "date",
      "title": "Waybill Date",
      "description": "Waybill generated date",
      "readonly": false,
      "width": 150
    },
    "shp_ettn": {
      "bsonType": "string",
      "title": "Waybill ETTN",
      "description": "Waybill ETTN",
      "placeholder": "ETTN",
      "pattern": "^[a-z0-9-]{32,40}$",
      "minLength": 32,
      "maxLength": 40,
      "readonly": false,
      "width": 270
    }
  },
  "sort": {
    "_modified_at": -1
  },
  "required": ["shp_id", "shp_date", "shp_acc_no", "shp_carrier_name", "shp_carrier_id", "shp_vehicle_id"],
  "index": [["shp_id"], ["shp_acc_no"], ["shp_waybill_no"]],
  "unique": [["shp_id"]],
  "parents": [
    {
      "collection": "account",
      "match": [
        {
          "key": "shp_acc_no",
          "value": "acc_no"
        }
      ],
      "filter": [
        {
          "key": "acc_is_active",
          "op": "eq",
          "value": true
        }
      ],
      "get": ["acc_no", "acc_name"]
    }
  ],
  "links": [
    {
      "collection": "delivery",
      "get": "dnn_no",
      "match": [
        {
          "key": "dnn_status",
          "op": "in",
          "value": "50-OnTheTouchpoint,60-ReadyToBeDelivered"
        },
        {
          "key": "dnn_acc_no",
          "op": "eq",
          "value": "shp_acc_no"
        }
      ],
      "set": [
        {
          "key": "dnn_shp_id",
          "value": "shp_id"
        },
        {
          "key": "dnn_status",
          "value": "60-ReadyToBeDelivered"
        }
      ],
      "autofill": true,
      "btntext": "delivery",
      "_tags": ["#Managers", "#Technoplatz", "#Administrators"]
    }
  ],
  "actions": [
    {
      "id": "ewaybill-issue",
      "title": "E-Waybill Issue",
      "enabled": true,
      "match": [
        {
          "key": "shp_status",
          "op": "eq",
          "value": "10-Ready"
        }
      ],
      "set": [
        {
          "key": "shp_notes",
          "value": null
        }
      ],
      "one_click": false,
      "_tags": ["#Managers", "#Administrators"],
      "notification": {
        "notify": true,
        "subject": "DNs Shipped",
        "body": "Hi,<br /><br />We would like to let you know that shipment of attached DNs was completed.",
        "fields": "dnn_no,dnn_status",
        "filter": []
      },
      "apis": [
        {
          "id": "waybill-issue",
          "name": "Waybill Issue",
          "enabled": true,
          "url": "http://172.18.0.8/issue",
          "headers": {
            "Content-Type": "application/json"
          },
          "method": "post",
          "map": {
            "tag_prefix": "{http://tempuri.org/}",
            "shipment_collection": "shipment_data",
            "shipment_id_field": "shp_id",
            "shipment_ettn_field": "shp_ettn",
            "shipment_waybill_no_field": "shp_waybill_no",
            "shipment_waybill_date_field": "shp_waybill_date",
            "shipment_account_no_field": "shp_acc_no",
            "shipment_status_field": "shp_status",
            "shipment_notes_field": "shp_notes",
            "shipment_status_set_value": "20-Completed",
            "account_collection": "account_data",
            "account_no_field": "acc_no",
            "delivery_collection": "delivery_data",
            "delivery_shipment_id_field": "dnn_shp_id",
            "delivery_qty_field": "dnn_qty",
            "delivery_no_field": "dnn_no",
            "delivery_account_no_field": "dnn_acc_no",
            "delivery_product_no_field": "dnn_prd_no",
            "delivery_product_desc_field": "dnn_prd_description",
            "delivery_waybill_no_field": "dnn_waybill_no",
            "delivery_waybill_date_field": "dnn_waybill_date",
            "delivery_status_field": "dnn_status",
            "delivery_set_status": "70-Delivered",
            "document_format": 2
          }
        }
      ]
    },
    {
      "id": "ewaybill-download",
      "title": "E-Waybill Download",
      "enabled": true,
      "match": [
        {
          "key": "shp_status",
          "op": "eq",
          "value": "20-Completed"
        }
      ],
      "set": [],
      "noninteractive": true,
      "one_click": false,
      "_tags": ["#Managers", "#Administrators"],
      "apis": [
        {
          "id": "waybill-download",
          "name": "Waybill Download",
          "enabled": true,
          "url": "http://172.18.0.8/download",
          "headers": {
            "Content-Type": "application/json"
          },
          "method": "post",
          "map": {
            "tag_prefix": "{http://tempuri.org/}",
            "shipment_collection": "shipment_data",
            "shipment_id_field": "shp_id",
            "shipment_ettn_field": "shp_ettn",
            "document_format": 2
          }
        }
      ],
      "notification": {
        "notify": true,
        "subject": "DNs Shipped",
        "body": "Hi,<br /><br />We would like to let you know that shipment of attached DNs was completed.",
        "fields": "dnn_no,dnn_status",
        "filter": []
      }
    }
  ],
  "triggers": [],
  "views": {},
  "fetchers": []
}
