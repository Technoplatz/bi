{
  "properties": {
    "shp_id": {
      "bsonType": "string",
      "title": "Shipment No",
      "description": "Shipment ID",
      "placeholder": "Automatically assigned",
      "minLength": 14,
      "maxLength": 14,
      "pattern": "^[0-9]{14,14}$",
      "timestamp": true,
      "permanent": true
    },
    "shp_acc_no": {
      "bsonType": "string",
      "title": "Account No",
      "description": "Account No",
      "placeholder": "Please select an account",
      "minLength": 10,
      "maxLength": 11,
      "pattern": "^[A-Z0-9-]{10,11}$",
      "readonly": true
    },
    "shp_date": {
      "bsonType": "date",
      "title": "Ship Date",
      "description": "Shipment date",
      "dateOnly": false
    },
    "shp_carrier_id": {
      "bsonType": "string",
      "title": "Carrier ID",
      "description": "Carrier ID",
      "placeholder": "Please select a carrier",
      "minLength": 4,
      "maxLength": 4,
      "pattern": "^[A-Z0-9]{4,4}$",
      "readonly": true
    },
    "shp_carrier_name": {
      "bsonType": "string",
      "title": "Carrier Name",
      "description": "Carrier name or driver name surname",
      "placeholder": "Carrier company or driver name",
      "minLength": 2,
      "maxLength": 32,
      "readonly": true
    },
    "shp_carrier_tax_no": {
      "bsonType": "string",
      "title": "Carrier Tax No",
      "description": "Carrier tax no",
      "minLength": 10,
      "maxLength": 12,
      "pattern": "^[0-9]{10,12}$",
      "readonly": true
    },
    "shp_vehicle_id": {
      "bsonType": "string",
      "title": "Vehicle Plate",
      "description": "Vehicle plate number",
      "minLength": 6,
      "maxLength": 16,
      "pattern": "^[A-Za-z0-9 ]{6,16}$",
      "caseType": "uppercase",
      "readonly": true
    },
    "shp_notes": {
      "bsonType": "string",
      "title": "Shipment Notes",
      "description": "Shipment notes",
      "minLength": 0,
      "maxLength": 512
    },
    "shp_wayb_no": {
      "bsonType": "string",
      "title": "Waybill No",
      "description": "Waybill serial number",
      "placeholder": "Automatically assigned",
      "pattern": "^[A-Z0-9-]{16,18}$",
      "minLength": 0,
      "maxLength": 18,
      "readonly": true
    },
    "shp_wayb_date": {
      "bsonType": "date",
      "title": "Waybill Date",
      "description": "Waybill issue date",
      "placeholder": "Automatically assigned",
      "readonly": true
    },
    "shp_wayb_ettn": {
      "bsonType": "string",
      "title": "Waybill ETTN",
      "description": "Waybill ETTN",
      "placeholder": "Automatically assigned",
      "pattern": "^[a-z0-9-]{32,40}$",
      "minLength": 32,
      "maxLength": 40,
      "readonly": true
    }
  },
  "sort": {
    "shp_id": -1
  },
  "required": ["shp_id", "shp_date", "shp_acc_no", "shp_carrier_name", "shp_carrier_id", "shp_carrier_tax_no", "shp_vehicle_id"],
  "index": [["shp_id"], ["shp_acc_no"], ["shp_wayb_no"]],
  "unique": [["shp_id"]],
  "parents": [
    {
      "collection": "account",
      "match": [
        {
          "key": "shp_acc_no",
          "value": "acc_no"
        }
      ],
      "filter": [
        {
          "key": "acc_is_active",
          "op": "eq",
          "value": true
        }
      ],
      "get": ["acc_no", "acc_name"]
    },
    {
      "collection": "carrier",
      "match": [
        {
          "key": "shp_carrier_id",
          "value": "car_id"
        },
        {
          "key": "shp_carrier_name",
          "value": "car_name"
        },
        {
          "key": "shp_carrier_tax_no",
          "value": "car_tax_no"
        },
        {
          "key": "shp_vehicle_id",
          "value": "car_plate_no"
        }
      ],
      "filter": [
        {
          "key": "car_acc_no",
          "op": "nnull",
          "value": null
        }
      ],
      "get": ["car_id", "car_name", "car_tax_no", "car_plate_no"]
    }
  ],
  "links": [
    {
      "collection": "delivery",
      "get": "dnn_no",
      "match": [
        {
          "key": "dnn_status",
          "op": "eq",
          "value": "60-ReadyToBeDelivered"
        },
        {
          "key": "dnn_acc_no",
          "op": "eq",
          "value": "shp_acc_no"
        }
      ],
      "set": [
        {
          "key": "dnn_wayb_id",
          "value": "shp_id"
        }
      ],
      "autofill": true,
      "btntext": "delivery",
      "api": {
        "id": "waybill-issue",
        "enabled": true,
        "protocol": "http",
        "subdomain": "",
        "domain": "172.18.0.8",
        "path": "/issue",
        "headers": {
          "Content-Type": "application/json"
        },
        "method": "post",
        "map": {
          "tag_prefix": "{http://tempuri.org/}",
          "shipment_collection": "shipment_data",
          "shipment_id_field": "shp_id",
          "shipment_ettn_field": "shp_wayb_ettn",
          "shipment_waybill_no_field": "shp_wayb_no",
          "shipment_waybill_date_field": "shp_wayb_date",
          "shipment_account_no_field": "shp_acc_no",
          "shipment_notes_field": "shp_notes",
          "account_collection": "account_data",
          "account_no_field": "acc_no",
          "delivery_collection": "delivery_data",
          "delivery_shipment_id_field": "dnn_wayb_id",
          "delivery_qty_field": "dnn_qty",
          "delivery_no_field": "dnn_no",
          "delivery_account_no_field": "dnn_acc_no",
          "delivery_product_no_field": "dnn_prd_no",
          "delivery_product_desc_field": "dnn_prd_description",
          "delivery_waybill_no_field": "dnn_wayb_no",
          "delivery_waybill_date_field": "dnn_wayb_date",
          "delivery_set_status": "70-Delivered",
          "document_format": 2
        }
      },
      "notification": {
        "notify": true,
        "subject": "Touchpoint [DNs Shipped]",
        "body": "Hi,<br /><br />We would like to let you know that the attached deliveries have been shipped successfully.",
        "fields": "dnn_no,dnn_line_no,dnn_status,dnn_acc_name,dnn_prd_no,dnn_prd_description,dnn_qty,dnn_wayb_no",
        "attachment": true,
        "filter": []
      },
      "_tags": ["#Managers", "#Administrators", "#Logistics", "#Operation", "#Touchpoint", "#Technoplatz"]
    }
  ],
  "actions": [
    {
      "id": "waybill-download",
      "title": "Download Selected",
      "enabled": true,
      "match": [
        {
          "key": "shp_wayb_ettn",
          "op": "nnull",
          "value": null
        }
      ],
      "set": [],
      "noninteractive": true,
      "one_click": false,
      "icon": "cloud-download-outline",
      "uniqueness": false,
      "unique": [],
      "_tags": ["#Managers", "#Administrators", "#Logistics", "#Operation", "#Touchpoint", "#Technoplatz"],
      "api": {
        "id": "waybill-download",
        "enabled": true,
        "protocol": "http",
        "subdomain": "",
        "domain": "172.18.0.8",
        "path": "/download",
        "headers": {
          "Content-Type": "application/json"
        },
        "method": "post",
        "map": {
          "tag_prefix": "{http://tempuri.org/}",
          "shipment_collection": "shipment_data",
          "shipment_id_field": "shp_id",
          "shipment_ettn_field": "shp_wayb_ettn",
          "document_format": 2
        }
      },
      "notification": {
        "notify": true,
        "subject": "Touchpoint [Waybill Downloaded]",
        "body": "Hi,<br /><br />We would like to let you know that the waybill of the attached deliveries has been donwloaded.",
        "fields": "dnn_no,dnn_line_no,dnn_status,dnn_acc_name,dnn_prd_no,dnn_prd_description,dnn_qty,dnn_wayb_no",
        "filter": []
      }
    }
  ],
  "triggers": [],
  "import": {
    "enabled": false
  }
}
