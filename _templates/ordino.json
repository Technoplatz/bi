{
  "properties": {
    "odi_no": {
      "bsonType": "string",
      "title": "Ordino No",
      "description": "Primary ordino number",
      "pattern": "^[\\p{L}0-9A-Z-_./ ]{1,20}$",
      "minLength": 1,
      "maxLength": 20,
      "casetype": "uppercase"
    },
    "odi_sub_no": {
      "bsonType": "string",
      "title": "Ordino Sub No",
      "description": "Secondary ordino number",
      "pattern": "^[\\p{L}0-9A-Z-_/ ]{1,20}$",
      "minLength": 1,
      "maxLength": 20,
      "casetype": "uppercase"
    },
    "odi_date": {
      "bsonType": "date",
      "title": "Ordino Date",
      "description": "Ordino Opening Date",
      "dateonly": true
    },
    "odi_from": {
      "bsonType": "string",
      "title": "Shipped From",
      "description": "Country where the goods are loaded",
      "enum": ["China", "Hungary", "Netherlands"]
    },
    "odi_customs": {
      "bsonType": "string",
      "title": "Customs",
      "description": "Customs Location",
      "enum": ["IGA", "Halkalı", "Ambarlı", "AHL"]
    },
    "odi_arrived": {
      "bsonType": "bool",
      "title": "Arrived?",
      "description": "Ordino arrived",
      "truetext": "Arrived",
      "falsetext": "OnTheWay",
      "default": false
    },
    "odi_arrived_date": {
      "bsonType": "date",
      "title": "Arrived Date",
      "description": "Date of Arrival",
      "dateonly": true
    }
  },
  "required": ["odi_no", "odi_sub_no", "odi_date", "odi_from", "odi_customs"],
  "index": [["odi_no"], ["odi_no", "odi_sub_no"], ["odi_from"], ["odi_customs"]],
  "unique": [["odi_no", "odi_sub_no"]],
  "sort": {
    "_modified_at": -1
  },
  "parents": [],
  "links": [
    {
      "collection": "delivery",
      "get": "dnn_no",
      "match": [
        {
          "key": "dnn_status",
          "op": "eq",
          "value": "00-Open"
        }
      ],
      "set": [
        {
          "key": "dnn_odi_no",
          "value": "odi_no"
        },
        {
          "key": "dnn_odi_sub_no",
          "value": "odi_sub_no"
        },
        {
          "key": "dnn_status",
          "value": "10-OnTheWay"
        }
      ],
      "autofill": true,
      "btntext": "Add DNs",
      "_tags": ["#Managers", "#Technoplatz", "#Operation"],
      "notification": {
        "notify": true,
        "subject": "DNs Linked to Ordino",
        "body": "Hi,<br /><br />We would like to let you know that attached DNs has been linked to an Ordino.",
        "attachment": true,
        "fields": "dnn_odi_no,dnn_odi_sub_no,dnn_no,dnn_line_no,dnn_status,dnn_bill_no,dnn_acc_no,dnn_acc_name,dnn_prd_no,dnn_prd_description,dnn_qty"
      }
    }
  ],
  "actions": [],
  "triggers": [
    {
      "name": "Ordino Arrived",
      "enabled": true,
      "operations": ["update", "insert"],
      "changes": [
        {
          "key": "odi_arrived",
          "op": "eq",
          "value": true
        }
      ],
      "conditions": [
        {
          "key": "odi_arrived",
          "op": "ne",
          "value": true
        }
      ],
      "targets": [
        {
          "collection": "delivery",
          "match": [
            {
              "key": "dnn_odi_no",
              "value": "odi_no"
            },
            {
              "key": "dnn_odi_sub_no",
              "value": "odi_sub_no"
            }
          ],
          "filter": [
            {
              "key": "dnn_status",
              "op": "in",
              "value": "10-OnTheWay,20-OnCustoms"
            }
          ],
          "set": [
            {
              "key": "dnn_status",
              "value": "20-OnCustoms"
            }
          ],
          "upsert": false
        }
      ]
    },
    {
      "name": "Ordino Arrived Cancel",
      "enabled": true,
      "operations": ["update", "insert"],
      "changes": [
        {
          "key": "odi_arrived",
          "op": "eq",
          "value": false
        }
      ],
      "conditions": [
        {
          "key": "odi_arrived",
          "op": "ne",
          "value": false
        }
      ],
      "targets": [
        {
          "collection": "delivery",
          "match": [
            {
              "key": "dnn_odi_no",
              "value": "odi_no"
            },
            {
              "key": "dnn_odi_sub_no",
              "value": "odi_sub_no"
            }
          ],
          "filter": [
            {
              "key": "dnn_status",
              "op": "in",
              "value": "10-OnTheWay,20-OnCustoms"
            }
          ],
          "set": [
            {
              "key": "dnn_status",
              "value": "10-OnTheWay"
            }
          ],
          "upsert": false
        }
      ]
    }
  ],
  "views": {},
  "fetchers": []
}
