{
  "properties": {
    "odi_no": {
      "bsonType": "string",
      "title": "Ordino No",
      "description": "Primary ordino number",
      "pattern": "^[\\p{L}0-9A-Z-_./ ]{1,20}$",
      "minLength": 1,
      "maxLength": 20,
      "caseType": "uppercase",
      "permanent": true
    },
    "odi_sub_no": {
      "bsonType": "string",
      "title": "Ordino Sub No",
      "description": "Secondary ordino number",
      "pattern": "^[\\p{L}0-9A-Z-_/ ]{1,20}$",
      "minLength": 1,
      "maxLength": 20,
      "caseType": "uppercase",
      "permanent": true
    },
    "odi_from": {
      "bsonType": "string",
      "title": "Factory",
      "description": "Factory country",
      "minLength": 3,
      "maxLength": 16,
      "pattern": "^[A-Za-z-]{3,16}$",
      "readonly": true
    },
    "odi_customs": {
      "bsonType": "string",
      "title": "Customs",
      "description": "Customs location",
      "minLength": 3,
      "maxLength": 16,
      "pattern": "^[\\w|\\w$|\\W\\w|\\w\\W]{3,16}$",
      "readonly": true
    },
    "odi_date": {
      "bsonType": "date",
      "title": "Ordino Date",
      "description": "Ordino opening date",
      "dateOnly": true
    },
    "odi_arrived_date": {
      "bsonType": "date",
      "title": "Arrival Date",
      "description": "Date of arrival",
      "dateOnly": true
    }
  },
  "required": ["odi_no", "odi_sub_no", "odi_date", "odi_from", "odi_customs"],
  "index": [["odi_from"], ["odi_customs"]],
  "unique": [["odi_no", "odi_sub_no"]],
  "sort": {
    "_created_at": -1
  },
  "parents": [
    {
      "collection": "customs",
      "match": [
        {
          "key": "odi_customs",
          "value": "cum_id"
        }
      ],
      "filter": [
        {
          "key": "cum_is_active",
          "op": "eq",
          "value": true
        }
      ],
      "get": ["cum_id"],
      "group": false
    },
    {
      "collection": "factory",
      "match": [
        {
          "key": "odi_from",
          "value": "fac_country"
        }
      ],
      "filter": [
        {
          "key": "fac_is_active",
          "op": "eq",
          "value": true
        }
      ],
      "get": ["fac_country", "fac_id"],
      "group": false
    }
  ],
  "links": [
    {
      "collection": "delivery",
      "get": "dnn_no",
      "sum": "dnn_amount",
      "listed": true,
      "match": [
        {
          "key": "dnn_status",
          "op": "eq",
          "value": "00-Open"
        }
      ],
      "set": [
        {
          "key": "dnn_odi_no",
          "value": "odi_no"
        },
        {
          "key": "dnn_odi_sub_no",
          "value": "odi_sub_no"
        },
        {
          "key": "dnn_status",
          "value": "10-OnTheWay"
        }
      ],
      "autofill": true,
      "btntext": "+DNN",
      "_tags": ["#Managers", "#Technoplatz", "#Operation", "#Logistics"],
      "notification": {
        "notify": true,
        "subject": "Logistics [Ordino Generated with DNN]",
        "body": "Hi,<br /><br />We would like to let you know that the attached DNs have been linked to ordino.",
        "attachment": true,
        "key": "odi_sub_no",
        "fields": "dnn_no,dnn_line_no,dnn_odi_no,dnn_odi_sub_no,dnn_acc_no,dnn_acc_name,dnn_prd_no,dnn_prd_description,dnn_qty",
        "filter": []
