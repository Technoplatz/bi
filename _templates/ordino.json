{
  "properties": {
    "odi_no": {
      "bsonType": "string",
      "title": "Ordino No",
      "description": "Ana Konsimento No",
      "minLength": 10,
      "maxLength": 20,
      "pattern": "^[0-9A-Z-]{10,20}$",
      "width": 170
    },
    "odi_sub_no": {
      "bsonType": "string",
      "title": "Ordino Sub No",
      "description": "Ara Konşimento No",
      "minLength": 6,
      "maxLength": 20,
      "pattern": "^[0-9A-Z-]{6,20}$"
    },
    "odi_status": {
      "bsonType": "string",
      "title": "Status",
      "description": "Konşimento Statüsü",
      "enum": [
        "00-Open",
        "10-OnTheWay",
        "20-OnCustoms",
        "30-OnCustomsProcess",
        "40-ClearanceCompleted"
      ],
      "default": "00-Open",
      "width": 160
    },
    "odi_date": {
      "bsonType": "date",
      "title": "Ordino Date",
      "description": "Konşimento Tarihi"
    },
    "odi_customs": {
      "bsonType": "string",
      "title": "Customs",
      "description": "Gümrük Yeri",
      "enum": [
        "AHL",
        "Halkalı",
        "Ambarlı"
      ],
      "width": 120
    },
    "odi_from": {
      "bsonType": "string",
      "title": "Shipped From",
      "description": "Çıkış Yeri",
      "enum": [
        "China",
        "Hungary"
      ],
      "width": 110
    },
    "odi_eta_date": {
      "bsonType": "date",
      "title": "ETA Date",
      "description": "Varış Tarihi",
      "width": 110
    },
    "odi_ship_type": {
      "bsonType": "string",
      "title": "Ship Type",
      "description": "Sevk Tipi",
      "enum": [
        "Sea",
        "Air",
        "Truck"
      ],
      "width": 120
    },
    "odi_transfer_date": {
      "bsonType": "date",
      "title": "Trasfer Date",
      "description": "Transfer Tarihi"
    },
    "odi_arrived_date": {
      "bsonType": "date",
      "title": "Arrived Date",
      "description": "Varış Tarihi"
    },
    "odi_amount": {
      "bsonType": "number",
      "title": "Amount",
      "description": "Amount",
      "default": 0
    }
  },
  "required": [
    "odi_sub_no",
    "odi_date",
    "odi_no",
    "odi_from",
    "odi_ship_type",
    "odi_customs"
  ],
  "index": [
    [
      "odi_no"
    ],
    [
      "odi_no",
      "odi_sub_no"
    ],
    [
      "odi_from"
    ]
  ],
  "unique": [
    [
      "odi_sub_no"
    ]
  ],
  "sort": {
    "_modified_at": -1
  },
  "parents": [],
  "actions": [
    {
      "id": "act-ordnio-on-the-way",
      "title": "On The Way",
      "enabled": true,
      "match": [
        {
          "key": "odi_status",
          "op": "in",
          "value": "00-Open,10-OnTheWay,20-OnCustoms"
        }
      ],
      "set": [
        {
          "key": "odi_status",
          "value": "10-OnTheWay"
        },
        {
          "key": "odi_date",
          "value": null
        }
      ],
      "one_click": false,
      "_tags": [
        "#Technoplatz"
      ],
      "notification": {
        "notify": false,
        "subject": "Ordino is on the way",
        "body": "Hi,<br /><br />We would like to let you know that status of the attached ordinos has been changed from 00-Open to 10-OnTheWay at once.",
        "fields": "odi_no,odi_sub_no,odi_ship_type",
        "filter": [
          {
            "key": "odi_status",
            "op": "eq",
            "value": "10-OnTheWay"
          }
        ]
      }
    },
    {
      "id": "act-ordnio-arrived",
      "title": "On Customs (Arrived)",
      "enabled": true,
      "match": [
        {
          "key": "odi_status",
          "op": "eq",
          "value": "10-OnTheWay"
        }
      ],
      "set": [
        {
          "key": "odi_status",
          "value": "20-OnCustoms"
        },
        {
          "key": "odi_arrived_date",
          "value": null
        }
      ],
      "one_click": false,
      "_tags": [
        "#Technoplatz"
      ],
      "notification": {
        "notify": false,
        "subject": "Ordino is on customs",
        "body": "Hi,<br /><br />We would like to let you know that status of the attached ordinos has been changed from 10-OnTheWay to 20-OnCustoms at once.",
        "fields": "odi_no,odi_sub_no,odi_ship_type",
        "filter": [
          {
            "key": "odi_status",
            "op": "eq",
            "value": "20-OnCustoms"
          }
        ]
      }
    }
  ],
  "triggers": [
    {
      "name": "Set DNs 10-OnTheWay",
      "enabled": true,
      "operations": [
        "update",
        "insert"
      ],
      "changes": [
        {
          "key": "odi_status",
          "op": "eq",
          "value": "10-OnTheWay"
        }
      ],
      "conditions": [
        {
          "key": "odi_status",
          "op": "in",
          "value": "00-Open,10-OnTheWay,20-OnCustoms,30-OnCustomsProcess"
        }
      ],
      "targets": [
        {
          "collection": "delivery",
          "match": [
            {
              "key": "dnn_odi_no",
              "value": "odi_no"
            },
            {
              "key": "dnn_odi_sub_no",
              "value": "odi_sub_no"
            }
          ],
          "filter": [
            {
              "key": "dnn_status",
              "op": "in",
              "value": "10-OnTheWay,20-OnCustoms,30-OnCustomsProcess,40-ClearanceCompleted"
            }
          ],
          "set": [
            {
              "key": "dnn_status",
              "value": "10-OnTheWay"
            }
          ],
          "upsert": false
        }
      ]
    },
    {
      "name": "Set DNs 20-OnCustoms",
      "enabled": true,
      "operations": [
        "update",
        "insert"
      ],
      "changes": [
        {
          "key": "odi_status",
          "op": "eq",
          "value": "20-OnCustoms"
        }
      ],
      "conditions": [
        {
          "key": "odi_status",
          "op": "in",
          "value": "10-OnTheWay,20-OnCustoms,30-OnCustomsProcess,40-ClearanceCompleted"
        }
      ],
      "targets": [
        {
          "collection": "delivery",
          "match": [
            {
              "key": "dnn_odi_no",
              "value": "odi_no"
            },
            {
              "key": "dnn_odi_sub_no",
              "value": "odi_sub_no"
            }
          ],
          "filter": [
            {
              "key": "dnn_status",
              "op": "in",
              "value": "01-StandBy,10-OnTheWay,20-OnCustoms,30-OnCustomsProcess,40-ClearanceCompleted"
            }
          ],
          "set": [
            {
              "key": "dnn_status",
              "value": "20-OnCustoms"
            }
          ],
          "upsert": false
        }
      ]
    }
  ]
}