{
  "properties": {
    "odi_no": {
      "bsonType": "string",
      "title": "Ordino No",
      "description": "Primary ordino number",
      "pattern": "^[\\p{L}0-9A-Z-_./ ]{1,20}$",
      "minLength": 1,
      "maxLength": 20,
      "caseType": "uppercase",
      "permanent": true
    },
    "odi_sub_no": {
      "bsonType": "string",
      "title": "Ordino Sub No",
      "description": "Secondary ordino number",
      "pattern": "^[\\p{L}0-9A-Z-_/ ]{1,20}$",
      "minLength": 1,
      "maxLength": 20,
      "caseType": "uppercase",
      "permanent": true
    },
    "odi_date": {
      "bsonType": "date",
      "title": "Ordino Date",
      "description": "Ordino opening date",
      "dateOnly": true
    },
    "odi_from": {
      "bsonType": "string",
      "title": "From",
      "description": "Country where the goods were loaded",
      "enum": ["China", "Hungary", "Netherlands"]
    },
    "odi_customs": {
      "bsonType": "string",
      "title": "Customs",
      "description": "Customs location",
      "enum": ["IGA", "Halkalı", "Ambarlı", "AHL"]
    },
    "odi_arrived_date": {
      "bsonType": "date",
      "title": "Arrival Date",
      "description": "Date of arrival",
      "dateOnly": true
    },
    "odi_closed": {
      "bsonType": "bool",
      "title": "Closed",
      "description": "Ordino closed",
      "default": false,
      "trueText": "Closed",
      "falseText": "Open"
    }
  },
  "required": ["odi_no", "odi_sub_no", "odi_date", "odi_from", "odi_customs"],
  "index": [["odi_no"], ["odi_sub_no"], ["odi_from"], ["odi_customs"]],
  "unique": [["odi_no", "odi_sub_no"]],
  "sort": {
    "_modified_at": -1
  },
  "parents": [],
  "links": [
    {
      "collection": "delivery",
      "get": "dnn_no",
      "match": [
        {
          "key": "dnn_status",
          "op": "eq",
          "value": "00-Open"
        }
      ],
      "set": [
        {
          "key": "dnn_odi_no",
          "value": "odi_no"
        },
        {
          "key": "dnn_odi_sub_no",
          "value": "odi_sub_no"
        },
        {
          "key": "dnn_status",
          "value": "10-OnTheWay"
        }
      ],
      "autofill": true,
      "btntext": "Attached DNs",
      "_tags": ["#Managers", "#Technoplatz", "#Operation", "#Logistics"],
      "notification": {
        "notify": true,
        "subject": "Ordino [DNs Attached]",
        "body": "Hi,<br /><br />We would like to let you know that the attached DNs have been linked to ordino.",
        "attachment": true,
        "fields": "dnn_no,dnn_line_no,dnn_odi_no,dnn_odi_sub_no,dnn_acc_no,dnn_acc_name,dnn_prd_no,dnn_prd_description,dnn_qty"
      }
    }
  ],
  "actions": [
    {
      "id": "bulk-arrived",
      "title": "Arrived at Customs",
      "enabled": true,
      "match": [
        {
          "key": "odi_arrived_date",
          "op": "null",
          "value": null
        },
        {
          "key": "odi_closed",
          "op": "ne",
          "value": true
        }
      ],
      "set": [
        {
          "key": "odi_arrived_date",
          "value": null
        }
      ],
      "one_click": true,
      "icon": "megaphone",
      "uniqueness": false,
      "unique": [],
      "_tags": ["#Managers", "#Administrators", "#Logistics", "#Operation", "#Technoplatz"],
      "notification": {
        "notify": true,
        "subject": "Ordino [Arrived]",
        "body": "Hi,<br /><br />We would like to let you know that attached ordinos have been arrived at customs.",
        "attachment": true,
        "fields": "odi_no,odi_sub_no,odi_date,odi_from,odi_customs,odi_arrived_date",
        "filter": [
          {
            "key": "odi_arrived_date",
            "op": "nnull",
            "value": null
          }
        ]
      }
    }
  ],
  "triggers": [
    {
      "name": "ordino-keys-updated",
      "enabled": true,
      "operations": ["update"],
      "changes": [
        {
          "key": "odi_no",
          "op": "nnull",
          "value": null
        },
        {
          "key": "odi_sub_no",
          "op": "nnull",
          "value": null
        }
      ],
      "conditions": [
        {
          "key": "odi_closed",
          "op": "ne",
          "value": true
        }
      ],
      "targets": [
        {
          "collection": "delivery",
          "match": [
            {
              "key": "_ordino_id",
              "value": "_id"
            }
          ],
          "filter": [],
          "set": [
            {
              "key": "dnn_odi_no",
              "value": "odi_no"
            },
            {
              "key": "dnn_odi_sub_no",
              "value": "odi_sub_no"
            }
          ],
          "upsert": false
        }
      ]
    },
    {
      "name": "ordino-arrived",
      "enabled": true,
      "operations": ["update", "insert"],
      "changes": [
        {
          "key": "odi_arrived_date",
          "op": "nnull",
          "value": null
        }
      ],
      "conditions": [
        {
          "key": "odi_closed",
          "op": "ne",
          "value": true
        }
      ],
      "targets": [
        {
