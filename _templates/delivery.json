      ],
      "one_click": true,
      "icon": "megaphone",
      "uniqueness": false,
      "unique": [],
      "_tags": ["#Managers", "#Administrators", "#Logistics", "#Operations", "#Technoplatz"],
      "notification": {
        "notify": true,
        "subject": "Delivery [00-Open]",
        "body": "Hi,<br /><br />We would like to let you know that statuses of the attached DNs were changed from 00-Standby to 00-Open.",
        "attachment": true,
        "fields": "dnn_no,dnn_line_no,dnn_status,dnn_bill_no,dnn_acc_no,dnn_acc_name,dnn_prd_no,dnn_prd_description,dnn_qty",
