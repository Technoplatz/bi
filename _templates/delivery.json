{
  "properties": {
    "dnn_no": {
      "bsonType": "string",
      "title": "DN No",
      "description": "Delivery number",
      "minLength": 10,
      "maxLength": 16,
      "pattern": "^[0-9A-Z-]{10,16}$",
      "permanent": true
    },
    "dnn_line_no": {
      "bsonType": "string",
      "title": "Line",
      "description": "Line no",
      "minLength": 1,
      "maxLength": 4,
      "pattern": "^[0-9]{1,4}$",
      "permanent": true
    },
    "dnn_status": {
      "bsonType": "string",
      "title": "Status",
      "description": "Delivery Status",
      "enum": [
        "00-Standby",
        "00-Open",
        "10-OnTheWay",
        "20-OnCustoms",
        "30-OnCustomsProcess",
        "40-ClearanceCompleted",
        "50-OnTheTouchpoint",
        "60-ReadyToBeDelivered",
        "70-Delivered",
        "BL-Backlog",
        "MI-Missing",
        "TX-Tarex",
        "WF-WriteOff",
        "RE-Remittance",
        "SP-ServicePack",
        "EX-Exported",
        "AR-Archived",
        "ND-NotDefined",
        "RJ-Rejected"
      ],
      "default": "00-Standby",
      "selection": true
    },
    "dnn_acc_no": {
      "bsonType": "string",
      "title": "Account No",
      "description": "Account No",
      "minLength": 9,
      "maxLength": 16,
      "pattern": "^[A-Z0-9-]{9,16}$",
      "readonly": true,
      "selection": true
    },
    "dnn_acc_name": {
      "bsonType": "string",
      "title": "Account Name",
      "description": "Account Name",
      "minLength": 1,
      "maxLength": 128,
      "readonly": true,
      "selection": true
    },
    "dnn_odi_no": {
      "bsonType": "string",
      "title": "Ordino No",
      "description": "Primary ordino number",
      "pattern": "^[\\p{L}0-9A-Z-_./ ]{1,20}$",
      "minLength": 1,
      "maxLength": 20,
      "caseType": "uppercase",
      "readonly": true
    },
    "dnn_odi_sub_no": {
      "bsonType": "string",
      "title": "Ordino Sub No",
      "description": "Secondary ordino number",
      "pattern": "^[\\p{L}0-9A-Z-_/ ]{1,20}$",
      "minLength": 1,
      "maxLength": 20,
      "caseType": "uppercase",
      "readonly": true
    },
    "dnn_man_no": {
      "bsonType": "string",
      "title": "Manifest No",
      "description": "Manifest number",
      "minLength": 1,
      "maxLength": 32,
      "pattern": "^[A-Z0-9-]{1,32}$",
      "caseType": "uppercase",
      "readonly": true
    },
    "dnn_ship_type": {
      "bsonType": "string",
      "title": "Ship Type",
      "description": "Shipping type",
      "enum": ["Air", "Sea", "Truck", "Other"],
      "minLength": 0,
      "maxLength": 8,
      "pattern": "^[A-Za-z]{0,8}$",
      "selection": true
    },
    "dnn_bill_no": {
      "bsonType": "string",
      "title": "Bill No",
      "description": "Bill Number",
      "minLength": 1,
      "maxLength": 16,
      "pattern": "^[0-9A-Z]{1,16}$"
    },
    "dnn_date": {
      "bsonType": "date",
      "title": "DN Date",
      "description": "DN Date",
      "dateOnly": true
    },
    "dnn_po_id": {
      "bsonType": "string",
      "title": "PO ID",
      "description": "Purchase Order Id",
      "minLength": 1,
      "maxLength": 64
    },
    "dnn_order_no": {
      "bsonType": "string",
      "title": "Order No",
      "description": "Order Number",
      "minLength": 10,
      "maxLength": 10,
      "pattern": "^[0-9]{10,10}$"
    },
    "dnn_bu_id": {
      "bsonType": "number",
      "title": "BU ID",
      "description": "Business Unit Id",
      "readonly": true,
      "selection": true
    },
    "dnn_prd_no": {
      "bsonType": "string",
      "title": "Product ID",
      "description": "Product ID",
      "minLength": 7,
      "maxLength": 16,
      "pattern": "^[A-Z0-9-]{7,16}$",
      "replacement": [
        {
          "find": "-",
          "replace": ""
        },
        {
          "find": "_",
          "replace": ""
        }
      ],
      "caseType": "uppercase"
    },
    "dnn_prd_description": {
      "bsonType": "string",
      "title": "Description",
      "description": "Product Description",
      "minLength": 1,
      "maxLength": 256
    },
    "dnn_qty": {
      "bsonType": "number",
      "title": "Quantity",
      "description": "Quantity",
      "default": 1
    },
    "dnn_unit_price": {
      "bsonType": "number",
      "title": "Price",
      "description": "Unit price",
      "default": 0,
      "decimals": 2
    },
    "dnn_amount": {
      "bsonType": "number",
      "title": "Amount",
      "description": "Line amount",
      "default": 0,
      "decimals": 2,
      "disabled": false
    },
    "dnn_prd_group": {
      "bsonType": "string",
      "title": "Group",
      "description": "Product Group",
      "minLength": 0,
      "maxLength": 32,
      "pattern": "^[A-Za-z&/ ]{0,32}$",
      "enum": [
        "CDT",
        "CNB",
        "CSP",
        "DSK",
        "DSW",
        "FOC",
        "IPH",
        "IPP",
        "LEP",
        "LPT",
        "MOB",
        "MON",
        "OPS",
        "OPT",
        "PAD",
        "PCM",
        "PNS",
        "POP",
        "PSV",
        "PWS",
        "SRV",
        "STR",
        "TRA",
        "WSD",
        "WSN",
        "XHC",
        "XHE",
        "XHO",
        "XHR",
        "XHS",
        "XSP",
        "OTH",
        "Service",
        "Desktop",
        "Notebook",
        "Option",
        "Visual",
        "Monitor",
        "Tablet",
        "Workstation_DT",
        "Workstation_NB",
        "SWA",
        "SRW",
        "VLS",
        "CDM",
        "SWR",
        "NET",
        "THS"
      ]
    },
    "dnn_length": {
      "bsonType": "number",
      "title": "Length",
      "description": "Length",
      "default": 0
    },
    "dnn_width": {
      "bsonType": "number",
      "title": "Width",
      "description": "Width",
      "default": 0
    },
    "dnn_height": {
      "bsonType": "number",
      "title": "Height",
      "description": "Height",
      "default": 0
    },
    "dnn_gross_weight": {
      "bsonType": "number",
      "title": "Gross Weight",
      "description": "Gross Weight",
      "default": 0
    },
    "dnn_eta_date": {
      "bsonType": "date",
      "title": "ETA Date",
      "description": "ETA date",
      "dateOnly": true
    },
    "dnn_labeled": {
      "bsonType": "bool",
      "title": "Labeled",
      "description": "Labeling process status",
      "default": false
    },
    "dnn_label_info": {
      "bsonType": "string",
      "title": "Labeling",
      "description": "Labeling information",
      "minLength": 0,
      "maxLength": 16,
      "pattern": "^[A-Za-z-]{0,16}$",
      "readonly": true,
      "enum": ["OK", "OK-Labeled", "OK-Skipped"]
    },
    "dnn_rtd_date": {
      "bsonType": "date",
      "title": "RTD Date",
      "description": "Ready to be delivered date",
      "dateOnly": false,
      "readonly": true
    },
    "dnn_wayb_id": {
      "bsonType": "string",
      "title": "Waybill ID",
      "description": "Waybill ID",
      "placeholder": "Automatically assigned",
      "minLength": 14,
      "maxLength": 14,
      "pattern": "^[0-9]{14,14}$",
      "timestamp": true,
      "permanent": true
    },
    "dnn_wayb_cname": {
      "bsonType": "string",
      "title": "Carrier Name",
      "description": "Carrier name or driver name surname",
      "placeholder": "Carrier or driver Name",
      "minLength": 1,
      "maxLength": 32,
      "permanent": true
    },
    "dnn_wayb_cid": {
      "bsonType": "string",
      "title": "Carrier Tax/ID No",
      "description": "Carrier tax no or driver id",
      "placeholder": "Carrier Tax/Id No",
      "minLength": 1,
      "maxLength": 16,
      "permanent": true
    },
    "dnn_wayb_vid": {
      "bsonType": "string",
      "title": "Vehicle Plate",
      "description": "Vehicle plate number",
      "placeholder": "Vehicle plate number",
      "minLength": 1,
      "maxLength": 16,
      "caseType": "uppercase",
      "permanent": true
    },
    "dnn_wayb_date": {
      "bsonType": "date",
      "title": "Waybill Date",
      "description": "Waybill generated date",
      "dateOnly": false,
      "permanent": true
    },
    "dnn_wayb_no": {
      "bsonType": "string",
      "title": "Waybill No",
      "description": "Waybill serial number",
      "placeholder": "Automatically assigned",
      "minLength": 0,
      "maxLength": 18,
      "readonly": true
    },
    "dnn_wayb_ettn": {
      "bsonType": "string",
      "title": "ETTN",
      "description": "Waybill ETTN",
      "placeholder": "Automatically assigned",
      "pattern": "^[a-z0-9-]{32,40}$",
      "minLength": 32,
      "maxLength": 40,
      "readonly": true
    },
    "dnn_change": {
      "bsonType": "string",
      "title": "Change",
      "description": "Change code",
      "readonly": true,
      "enum": ["CC-Customer", "SP-Split"]
    },
    "dnn_reminder": {
      "bsonType": "string",
      "title": "Reminder",
      "description": "Reminder",
      "placeholder": "Message for others to get notified",
      "minLength": 0,
      "maxLength": 8,
      "enum": ["On-hold", "Awaiting", "Missing", "Test", "Damaged", "Lost", "Approved", null],
      "reminder": true,
      "selection": true
    },
    "dnn_note": {
      "bsonType": "string",
      "title": "Note",
      "description": "Note",
      "placeholder": "Note for others to get considered",
      "minLength": 0,
      "maxLength": 256,
      "pattern": "^[\\w|\\w$|\\W\\w|\\w\\W]{0,256}$",
      "textarea": true,
      "reminder": true
    }
  },
  "required": [
    "dnn_no",
    "dnn_line_no",
    "dnn_acc_no",
    "dnn_bill_no",
    "dnn_status",
