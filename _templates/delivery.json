    "dnn_line_no": 1
  },
  "parents": [
    {
      "collection": "business",
      "match": [
        {
          "key": "dnn_bu_id",
          "value": "bun_id"
        }
      ],
      "filter": [
        {
          "key": "bun_id",
          "op": "gt",
          "value": 0
        }
      ],
      "get": ["bun_id", "bun_name"],
      "group": false
    },
    {
      "collection": "ordino",
      "match": [
        {
          "key": "dnn_odi_no",
          "value": "odi_no"
        },
        {
          "key": "dnn_odi_sub_no",
          "value": "odi_sub_no"
        }
      ],
      "filter": [
        {
          "key": "odi_closed",
          "op": "ne",
          "value": true
        }
      ],
      "get": ["odi_no", "odi_sub_no", "odi_customs"],
      "group": false
    },
    {
      "collection": "manifest",
      "match": [
        {
          "key": "dnn_man_no",
          "value": "man_no"
        }
      ],
      "filter": [
        {
          "key": "man_odi_no",
          "op": "eq",
          "value": "176-89477080"
        },
        {
          "key": "man_odi_sub_no",
          "op": "eq",
          "value": "B293242"
        }
      ],
      "get": ["man_no", "man_opening_date"],
      "group": false
    },
    {
      "collection": "account",
      "match": [
        {
          "key": "dnn_acc_no",
          "value": "acc_no"
        },
        {
          "key": "dnn_acc_name",
          "value": "acc_name",
          "exclude": true
        }
      ],
      "filter": [
        {
          "key": "acc_is_active",
          "op": "eq",
          "value": true
        }
      ],
      "get": ["acc_no", "acc_name"],
      "group": false
    }
  ],
  "actions": [
    {
      "id": "stby-to-open",
      "title": "Stby To Open",
      "enabled": true,
      "match": [
        {
          "key": "dnn_status",
          "op": "eq",
          "value": "00-Standby"
        }
      ],
      "set": [
        {
          "key": "dnn_status",
          "value": "00-Open"
