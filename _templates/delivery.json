{
  "properties": {
    "dnn_no": {
      "bsonType": "string",
      "title": "DN No",
      "description": "Delivery Number",
      "minLength": 10,
      "maxLength": 16,
      "pattern": "^[0-9-]{10,16}$",
      "width": 110
    },
    "dnn_line_no": {
      "bsonType": "number",
      "title": "Line No",
      "description": "Line No",
      "minimum": 10,
      "maximum": 1000,
      "width": 110
    },
    "dnn_status": {
      "bsonType": "string",
      "title": "Status",
      "description": "Delivery Status",
      "enum": [
        "00-Open",
        "01-StandBy",
        "10-OnTheWay",
        "20-OnCustoms",
        "30-OnCustomsProcess",
        "40-ClearanceCompleted",
        "50-OnTheTouchpoint",
        "60-ReadyToBeDelivered",
        "70-Delivered",
        "BL-Backlog",
        "NE-Missing",
        "TX-Tarex",
        "WF-WriteOff",
        "RE-Remittance",
        "SP-ServicePack",
        "EX-Exported",
        "AR-Archived"
      ],
      "default": "00-Open",
      "width": 160
    },
    "dnn_bill_no": {
      "bsonType": "string",
      "title": "Invoice No",
      "description": "Fatura No",
      "minLength": 10,
      "maxLength": 10,
      "pattern": "^[0-9]{10,10}$",
      "width": 130
    },
    "dnn_acc_no": {
      "bsonType": "string",
      "title": "Account No",
      "description": "Account No",
      "minLength": 1,
      "width": 110,
      "maxLength": 64
    },
    "dnn_date": {
      "bsonType": "date",
      "title": "DN Date",
      "description": "DN Date",
      "width": 120
    },
    "dnn_po_id": {
      "bsonType": "string",
      "title": "Po ID",
      "description": "Sipari≈ü No",
      "minLength": 1,
      "maxLength": 64,
      "width": 260
    },
    "dnn_po_date": {
      "bsonType": "date",
      "title": "PO Date",
      "description": "Purchase Order Date",
      "width": 120
    },
    "dnn_sales_doc": {
      "bsonType": "string",
      "title": "Sales Doc",
      "description": "Sales Document Number",
      "minLength": 10,
      "maxLength": 10,
      "pattern": "^[0-9]{10,10}$",
      "width": 130
    },
    "dnn_bu_id": {
      "bsonType": "number",
      "title": "BU ID",
      "description": "Business Unit Id",
      "width": 100
    },
    "dnn_bu_name": {
      "bsonType": "string",
      "title": "BU Name",
      "description": "Business Unit Name",
      "enum": ["Consumer", "Retail", "SMB", "Enterprise", "Cons", "Rel"],
      "width": 120
    },
    "dnn_odi_no": {
      "bsonType": "string",
      "title": "Ordino No",
      "description": "Main Ordino Number",
      "minLength": 10,
      "maxLength": 24,
      "pattern": "^[0-9A-Z-]{10,20}$",
      "width": 170
    },
    "dnn_odi_sub_no": {
      "bsonType": "string",
      "title": "Ordino Sub No",
      "description": "Sub Ordino Number",
      "minLength": 6,
      "maxLength": 20,
      "pattern": "^[0-9A-Z-]{6,20}$"
    },
    "dnn_man_no": {
      "bsonType": "string",
      "title": "Manifest No",
      "description": "Customs Manifest Number",
      "minLength": 18,
      "maxLength": 20,
      "width": 170
    },
    "dnn_prd_no": {
      "bsonType": "string",
      "title": "Product ID",
      "description": "Product ID",
      "minLength": 1,
      "maxLength": 64,
      "replacement": [
        {
          "find": "-",
          "replace": ""
        },
        {
          "find": "_",
          "replace": ""
        }
      ],
      "width": 110
    },
    "dnn_prd_description": {
      "bsonType": "string",
      "title": "Description",
      "description": "Product Description",
      "minLength": 1,
      "maxLength": 256,
      "width": 280
    },
    "dnn_weight": {
      "bsonType": "number",
      "title": "Weight",
      "description": "Total Weight",
      "default": 0,
      "width": 110
    },
    "dnn_qty": {
      "bsonType": "number",
      "title": "Quantity",
      "description": "Quantity",
      "default": 1,
      "width": 80
    },
    "dnn_unit_price": {
      "bsonType": "number",
      "title": "Price",
      "description": "Unit Price",
      "default": 0,
      "width": 130
    },
    "dnn_amount": {
      "bsonType": "number",
      "title": "Amount",
      "description": "Line Amount",
      "default": 0,
      "width": 110,
      "disabled": false
    },
    "dnn_customer_price": {
      "bsonType": "number",
      "title": "Customer Price",
      "description": "Customer Order Price",
      "default": 0,
      "width": 160
    },
    "dnn_customer_amount": {
      "bsonType": "number",
      "title": "Customer Amount",
      "description": "Customer Amount",
      "default": 0,
      "disabled": false,
      "width": 180
    },
    "dnn_waybill_no": {
      "bsonType": "string",
      "title": "Waybill No",
      "description": "Shipment Waybill Number",
      "minLength": 0,
      "maxLength": 16,
      "width": 130
    },
    "dnn_waybill_date": {
      "bsonType": "date",
      "title": "Waybill Date",
      "description": "Waybill Document Date",
      "width": 140
    },
    "dnn_invoice_no": {
      "bsonType": "string",
      "title": "Invoice No",
      "description": "Cusomer Invoice Number",
      "minLength": 0,
      "maxLength": 16,
      "width": 130
    },
    "dnn_invoice_date": {
      "bsonType": "date",
      "title": "Invoice Date",
      "description": "Cusomer Invoice Date",
      "width": 140
    }
  },
  "required": ["dnn_no", "dnn_acc_no", "dnn_status", "dnn_prd_no"],
  "index": [["dnn_acc_no"], ["dnn_status"], ["dnn_prd_no"], ["dnn_acc_no", "dnn_status"]],
  "unique": [["dnn_no", "dnn_line_no"]],
  "sort": {
    "_modified_at": -1
  },
  "parents": [
    {
      "collection": "ordino",
      "match": [
        {
          "key": "dnn_odi_no",
          "value": "odi_no"
        },
        {
          "key": "dnn_odi_sub_no",
          "value": "odi_sub_no"
        }
      ],
      "filter": [
        {
          "key": "odi_status",
          "op": "in",
          "value": "00-Open,10-OnTheWay,20-Arrived"
        }
      ],
      "get": ["odi_no", "odi_sub_no", "odi_customs"]
    },
    {
      "collection": "manifest",
      "match": [
        {
          "key": "dnn_man_no",
          "value": "man_no"
        }
      ],
      "filter": [
        {
          "key": "man_status",
          "op": "in",
          "value": "00-Open,10-InProgress"
        }
      ],
      "get": ["man_no", "man_opening_date"]
    },
    {
      "collection": "account",
      "match": [
        {
          "key": "dnn_acc_no",
          "value": "acc_no"
        }
      ],
      "filter": [
        {
          "key": "odi_status",
          "op": "eq",
          "value": "1-Arrived"
        }
      ],
      "get": ["acc_no", "acc_name"]
    }
  ],
  "actions": [
    {
      "id": "standby",
      "title": "StandBy",
      "enabled": true,
      "match": [
        {
          "key": "dnn_status",
          "op": "eq",
          "value": "00-Open"
        }
      ],
      "set": [
        {
          "key": "dnn_status",
          "value": "01-StandBy"
        }
      ],
      "one_click": true,
      "_tags": ["#Technoplatz"],
      "notification": {
        "notify": true,
        "subject": "DNs are stand by",
        "body": "Hi,<br /><br />We would like to let you know that status of the attached DNs was changed from 00-Open to 01-StandBy at once.",
        "fields": "dnn_no,dnn_status",
        "filter": [
          {
            "key": "dnn_status",
            "op": "eq",
            "value": "01-StandBy"
          }
        ]
      }
    },
    {
      "id": "standby-cancel",
      "title": "StandBy",
      "enabled": true,
      "rollback": true,
      "match": [
        {
          "key": "dnn_status",
          "op": "eq",
          "value": "01-StandBy"
        }
      ],
      "set": [
        {
          "key": "dnn_status",
          "value": "00-Open"
        }
      ],
      "one_click": true,
      "_tags": ["#Technoplatz"],
      "notification": {
        "notify": true,
        "subject": "DNs stand by canceled",
        "body": "Hi,<br /><br />We would like to let you know that status of the attached DNs has been rolled back from 01-StandBy to 00-Open.",
        "fields": "dnn_no,dnn_status",
        "filter": [
          {
            "key": "dnn_status",
            "op": "eq",
            "value": "00-Open"
          }
        ]
      }
    },
    {
      "id": "ordino",
      "title": "Attach to Ordino",
      "enabled": true,
      "match": [
        {
          "key": "dnn_status",
          "op": "eq",
          "value": "01-StandBy"
        }
      ],
      "set": [
        {
          "key": "dnn_status",
          "value": "10-OnTheWay"
        },
        {
          "key": "dnn_odi_no",
          "value": null
        },
        {
          "key": "dnn_odi_sub_no",
          "value": null
        }
      ],
      "one_click": false,
      "_tags": ["#Technoplatz"],
      "notification": {
        "notify": true,
        "subject": "DNs on the way",
        "body": "Hi,<br /><br />We would like to let you know that status of the attached DNs was changed from 01-StandBy to 10-OnTheWay.",
        "fields": "dnn_no,dnn_odi_no,dnn_odi_sub_no",
        "filter": [
          {
            "key": "dnn_status",
            "op": "eq",
            "value": "10-OnTheWay"
          }
        ]
      }
    },
    {
      "id": "ordino-cancel",
      "title": "Ordino",
      "enabled": false,
      "rollback": true,
      "match": [
        {
          "key": "dnn_status",
          "op": "eq",
          "value": "10-OnTheWay"
        }
      ],
      "set": [
        {
          "key": "dnn_status",
          "value": "01-StandBy"
        },
        {
          "key": "dnn_odi_no",
          "value": null
        },
        {
          "key": "dnn_odi_sub_no",
          "value": null
        }
      ],
      "one_click": false,
      "_tags": ["#Technoplatz"],
      "notification": {
        "notify": true,
        "subject": "DNs rolled back to stand by",
        "body": "Hi,<br /><br />We would like to let you know that status of the attached DNs has been rolled back from 10-OnTheWay to 01-StandBy.",
        "fields": "dnn_no,dnn_odi_no,dnn_odi_sub_no",
        "filter": [
          {
            "key": "dnn_status",
            "op": "eq",
            "value": "01-StandBy"
          }
        ]
      }
    },
    {
      "id": "manifest",
      "title": "Attach to Manifest",
      "enabled": true,
      "match": [
        {
          "key": "dnn_status",
          "op": "eq",
          "value": "20-OnCustoms"
        }
      ],
      "set": [
        {
          "key": "dnn_status",
          "value": "30-OnCustomsProcess"
        },
        {
          "key": "dnn_man_no",
          "value": null
        }
      ],
      "one_click": false,
      "_tags": ["#Technoplatz"],
      "notification": {
        "notify": true,
        "subject": "DNs on customs process",
        "body": "Hi,<br /><br />We would like to let you know that status of the attached DNs was changed from 20-OnCustoms to 30-OnCustomsProcess.",
        "fields": "dnn_no,dnn_odi_no,dnn_odi_sub_no,dnn_man_no",
        "filter": [
          {
            "key": "dnn_status",
            "op": "eq",
            "value": "30-OnCustomsProcess"
          }
        ]
      }
    }
  ],
  "triggers": [
    {
      "name": "Amounts updater",
      "enabled": true,
      "operations": ["update", "insert"],
      "changes": [
        {
          "key": "dnn_qty",
          "op": "gte",
          "value": 0
        },
        {
          "key": "dnn_unit_price",
          "op": "gte",
          "value": 0
        }
      ],
      "conditions": [
        {
          "key": "dnn_status",
          "op": "ne",
          "value": "70-Delivered"
        }
      ],
      "targets": [
        {
          "collection": "delivery",
          "match": [
            {
              "key": "_id",
              "value": "_id"
            }
          ],
          "filter": [
            {
              "key": "dnn_status",
              "op": "ne",
              "value": "70-Delivered"
            }
          ],
          "set": [
            {
              "key": "dnn_amount",
              "value": "dnn_qty * dnn_unit_price"
            }
          ],
          "upsert": false
        },
        {
          "collection": "delivery",
          "match": [
            {
              "key": "_id",
              "value": "_id"
            }
          ],
          "filter": [
            {
              "key": "dnn_status",
              "op": "ne",
              "value": "70-Delivered"
            }
          ],
          "set": [
            {
              "key": "dnn_customer_amount",
              "value": "dnn_qty * dnn_customer_price"
            }
          ],
          "upsert": false
        },
        {
          "collection": "manifest",
          "match": [
            {
              "key": "man_no",
              "value": "dnn_man_no"
            }
          ],
          "filter": [
            {
              "key": "man_status",
              "op": "in",
              "value": "00-Open,10-OnCustomsProcess"
            }
          ],
          "set": [
            {
              "key": "man_amount",
              "value": "sum(dnn_amount)"
            }
          ],
          "upsert": false
        },
        {
          "collection": "ordino",
          "match": [
            {
              "key": "odi_no",
              "value": "dnn_odi_no"
            },
            {
              "key": "odi_sub_no",
              "value": "dnn_odi_sub_no"
            }
          ],
          "filter": [
            {
              "key": "odi_status",
              "op": "in",
              "value": "00-Open,10-OnTheWay,20-OnCustoms"
            }
          ],
          "set": [
            {
              "key": "odi_amount",
              "value": "sum(dnn_amount)"
            }
          ],
          "upsert": false
        }
      ]
    }
  ],
