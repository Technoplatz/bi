{
  "properties": {
    "ser_no": {
      "bsonType": "string",
      "title": "Serial No",
      "description": "Serial no",
      "minLength": 4,
      "maxLength": 16,
      "pattern": "^[A-Za-z0-9-?]{4,16}$",
      "caseType": "uppercase"
    },
    "ser_dnn_no": {
      "bsonType": "string",
      "title": "DN No",
      "description": "Delivery Nomber",
      "minLength": 10,
      "maxLength": 16,
      "pattern": "^[0-9A-Z-]{10,16}$"
    },
    "ser_line_no": {
      "bsonType": "string",
      "title": "Line",
      "description": "DN line number",
      "minLength": 1,
      "maxLength": 4,
      "pattern": "^[0-9]{1,4}$"
    },
    "ser_prd_no": {
      "bsonType": "string",
      "title": "Product ID",
      "description": "Product id",
      "minLength": 7,
      "maxLength": 16,
      "pattern": "^[A-Z0-9-]{7,16}$",
      "replacement": [
        {
          "find": "-",
          "replace": ""
        },
        {
          "find": "_",
          "replace": ""
        }
      ],
      "caseType": "uppercase"
    },
    "ser_sscc_no": {
      "bsonType": "string",
      "title": "SSCC No",
      "description": "SSCC number",
      "minLength": 18,
      "maxLength": 20,
      "pattern": "^[0-9-]{18,20}$"
    },
    "ser_is_in": {
      "bsonType": "bool",
      "title": "Income",
      "description": "Touchpoint income",
      "default": false
    },
    "ser_in_date": {
      "bsonType": "date",
      "title": "In Date",
      "description": "Touchpoint incoming date"
    },
    "ser_is_out": {
      "bsonType": "bool",
      "title": "Outgoing",
      "description": "Touchpoint outgoing",
      "default": false
    },
    "ser_out_date": {
      "bsonType": "date",
      "title": "Out Date",
      "description": "Touchpoint outgoing date"
    }
  },
  "required": ["ser_dnn_no", "ser_line_no", "ser_prd_no", "ser_sscc_no"],
  "index": [
    ["ser_is_in"],
    ["ser_dnn_no"],
    ["ser_dnn_no", "ser_line_no"],
    ["ser_dnn_no", "ser_line_no", "ser_prd_no"],
    ["ser_sscc_no"],
    ["ser_dnn_no", "ser_sscc_no"]
  ],
  "unique": [["ser_no"]],
  "sort": {
    "_modified_at": -1
  },
  "parents": [],
  "links": [],
  "actions": [
    {
      "id": "act-assign-dn-und-spc",
      "title": "DN Update",
      "enabled": true,
      "match": [
        {
          "key": "ser_is_in",
          "op": "eq",
          "value": false
        }
      ],
      "set": [
        {
          "key": "ser_dnn_no",
          "value": null
        },
        {
          "key": "ser_prd_no",
          "value": null
        }
      ],
      "one_click": false,
      "uniqueness": false,
      "unique": [],
      "_tags": ["#Managers", "#Technoplatz", "#Operation"],
      "notification": {
        "notify": false,
        "subject": "Serials DN updated",
        "body": "Hi,<br /><br />We would like to let you know that dn info was updated.",
        "fields": "ser_no,ser_dnn_no,ser_prd_no,ser_sscc_no",
        "attachment": false,
        "filter": [
          {
            "key": "ser_is_in",
            "op": "eq",
            "value": false
          }
        ]
      }
    }
  ],
  "triggers": [
    {
      "name": "Barcode Readin",
      "enabled": true,
      "operations": ["update"],
      "changes": [
        {
          "key": "ser_is_in",
          "op": "eq",
          "value": true
        }
      ],
      "targets": [
        {
          "collection": "delivery",
          "match": [
            {
              "key": "dnn_no",
              "value": "ser_dnn_no"
            },
            {
              "key": "dnn_line_no",
              "value": "ser_line_no"
            }
          ],
          "filter": [
            {
              "key": "dnn_status",
              "op": "eq",
              "value": "40-ClearanceCompleted"
            }
          ],
          "set": [
            {
              "key": "dnn_status",
              "value": "50-OnTheTouchpoint"
            }
          ],
          "upsert": false
        }
      ]
    },
    {
      "name": "Barcode Readin Cancel",
      "enabled": true,
      "operations": ["update"],
      "changes": [
        {
          "key": "ser_is_in",
          "op": "eq",
          "value": false
        }
      ],
      "targets": [
        {
          "collection": "delivery",
          "match": [
            {
              "key": "dnn_no",
              "value": "ser_dnn_no"
            },
            {
              "key": "dnn_line_no",
              "value": "ser_line_no"
            }
          ],
          "filter": [
            {
              "key": "dnn_status",
              "op": "eq",
              "value": "50-OnTheTouchpoint"
            }
          ],
          "set": [
            {
              "key": "dnn_status",
              "value": "40-ClearanceCompleted"
            }
          ],
          "upsert": false
        }
      ]
    }
  ],
  "views": {},
  "fetchers": [],
  "import": {}
}
