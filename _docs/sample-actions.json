{
  "actions": [
    {
      "id": "action-stand-by",
      "title": "Set Status StandBy",
      "enabled": true,
      "match": [{ "key": "dnn_status", "op": "eq", "value": "00-Open" }],
      "set": [{ "key": "dnn_status", "value": "01-StandBy" }],
      "one_click": true,
      "notification": {
        "notify": true,
        "subject": "DNs are stand by",
        "body": "Hi,<br /><br />We would like to let you know that status of the attached DNs was changed from 00-Open to 01-StandBy at once.",
        "fields": "dnn_no,dnn_status",
        "filter": [{ "key": "dnn_status", "op": "eq", "value": "01-StandBy" }]
      },
      "_tags": ["#Technoplatz", "#Managers", "#Operation"]
    }
  ]
}
